
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var total = 0;
}

@foreach (var orden in ViewBag.Detalles)
{
    total += orden.Total;
}
<div class="mt-4 border rounded bg-white">
    <table class="table mb-0 table-bordered table-striped">
        <thead>
            <tr>
                <td>Id</td>
                <td>Insumo</td>
                <td>Cantidad</td>
                <td>Medida</td>
                <td>Precio</td>
                <td>idCompra</td>
                <td>Total</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var orden in ViewBag.Detalles)
            {
                <tr>
                    <td>@orden.IdDetallesCompra</td>
                    <td>@orden.NomInsumo</td>
                    <td>@orden.Cantidad</td>
                    <td>@orden.Medida</td>
                    <td>@orden.PrecioInsumo</td>
                    <td>@orden.IdCompra</td>
                    <td>@orden.Total</td>
                </tr>
            }
        </tbody>
    </table>
</div>


<div class="alert alert-dark mt-2 d-flex justify-content-between align-items-center ">
    <span>Total compra: @ViewBag.TotalCompra</span>
    <a asp-area="" asp-controller="Compras" asp-action="Index" class="ml-auto align-self-center" style="text-decoration: none;">
        <p>Regresar</p>
    </a>
</div>