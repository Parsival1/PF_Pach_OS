<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PF_Pach_OS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/PF_Pach_OS.styles.css" asp-append-version="true" />


    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="~/adminLTE/plugins/fontawesome-free/css/all.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/adminLTE/dist/css/adminlte.min.css">
    <link rel="stylesheet" href="~/css/estructuracion.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <partial name="_Navbar"/>
    <partial name="_Sidebar"/>

    <article class="content-wrapper">
        <form asp-action="Create" method="post">
            <div class="contenedor-configuracion">
                <a class="nav-link btn-configuracion text-light" asp-action="">Configuracion</a>
            </div>
        </form>
        </nav>
        <section>
            <header class="d-flex justify-content-between">
                <label>@ViewBag.accion MODULO</label>
            <label class="">@ViewBag.accion Usuario</label>
            </header>

            <form method="post" asp-controller="Compras" asp-action="Create">
                <button type="submit" class="btn-crear-registros">
                    Agregar compra
                </button>
            </form>
        <div class="modulos">
            @RenderBody()
        </div>
    </article>
    
    
        
    <script src="~/adminLTE/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/adminLTE/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/adminLTE/dist/js/adminlte.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

